datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  products  Product[]
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Product {
  createdAt   DateTime  @default(now())
  description String
  id          String    @id @default(cuid())
  name        String
  price       Float
  quantity    Int
  supplier    Supplier? @relation(fields: [supplierId], references: [id])
  supplierId  String?
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

model Supplier {
  address     String
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  name        String
  phoneNumber String
  products    Product[]
  updatedAt   DateTime  @updatedAt
}